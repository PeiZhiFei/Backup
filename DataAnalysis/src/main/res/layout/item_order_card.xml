<?xml version="1.0" encoding="utf-8"?>
<feifei.project.view.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <feifei.project.view.percent.PercentRelativeLayout
        android:background="@drawable/item_round_border"
        android:layout_width="match_parent"
        android:paddingBottom="10dp"
        android:layout_margin="10dp"
        android:layout_height="wrap_content">

    <TextView
        android:id="@+id/store_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="瑞隆超市"
        android:textSize="14sp"
        android:textColor="@color/brown" />

    <TextView
        android:id="@+id/test1"
        style="@style/percent"
        android:layout_below="@id/store_name"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="今天"
        android:textColor="@color/red"
        app:layout_widthPercent="33.3%" />

    <TextView
        android:id="@+id/test2"
        style="@style/percent"
        android:layout_below="@id/store_name"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/test1"
        android:gravity="center"
        android:text="本周"
        android:textColor="@color/main_green"
        app:layout_widthPercent="33.3%" />

    <TextView
        android:id="@+id/test3"
        style="@style/percent"
        android:layout_below="@id/store_name"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/test2"
        android:gravity="center"
        android:text="本月"
        android:textColor="@color/pink"
        app:layout_widthPercent="33.3%" />

    <TextView
        android:id="@+id/order_money_today"
        style="@style/percent"
        android:layout_below="@id/test1"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="￥134"
        android:textColor="@color/red"
        app:layout_widthPercent="33.3%" />

    <TextView
        android:id="@+id/order_money_week"
        style="@style/percent"
        android:layout_below="@id/test1"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/order_money_today"
        android:gravity="center"
        android:text="￥234"
        android:textColor="@color/main_green"
        app:layout_widthPercent="33.3%" />

    <TextView
        android:id="@+id/order_money_month"
        style="@style/percent"
        android:layout_below="@id/test1"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/order_money_week"
        android:gravity="center"
        android:text="￥554"
        android:textColor="@color/pink"
        app:layout_widthPercent="33.3%" />

    <TextView
        android:id="@+id/order_count_today"
        style="@style/percent"
        android:layout_below="@id/order_money_today"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="C 55"
        android:textColor="@color/red"
        app:layout_widthPercent="33.3%" />

    <TextView
        android:id="@+id/order_count_week"
        style="@style/percent"
        android:layout_below="@id/order_money_today"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/order_count_today"
        android:gravity="center"
        android:text="C 155"
        android:textColor="@color/main_green"
        app:layout_widthPercent="33.3%" />

    <TextView
        android:id="@+id/order_count_month"
        style="@style/percent"
        android:layout_below="@id/order_money_today"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/order_count_week"
        android:gravity="center"
        android:text="C 955"
        android:textColor="@color/pink"
        app:layout_widthPercent="33.3%" />
</feifei.project.view.percent.PercentRelativeLayout>
</feifei.project.view.percent.PercentRelativeLayout>
