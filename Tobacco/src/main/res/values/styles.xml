<resources>

    <style name="AppTheme" parent="android:Theme.Holo.Light.NoActionBar">
        <item name="android:windowBackground">@color/background_window</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="percent_layout" parent="percent">
        <item name="android:layout_margin">5dp</item>
        <item name="android:background">@drawable/shape_circle_blue</item>
        <item name="android:descendantFocusability">blocksDescendants</item>
        <item name="android:gravity">center</item>
        <item name="android:clickable">true</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="percent_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="myTheme.actionBar" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColorPrimary">@color/white</item>
    </style>

    <style name="myTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="actionBarTheme">@style/myTheme.actionBar</item>
        <item name="colorPrimary">#2b8c62</item>
    </style>

    <style name="detail_left">
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">@color/darkgray</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginLeft">10dp</item>
    </style>

    <style name="detail_et">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">@color/darkgray</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="detail_sp">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:textColor">@color/darkgray</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="detail_cb">
        <item name="android:layout_width">25dp</item>
        <item name="android:layout_height">25dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:textColor">@color/darkgray</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@drawable/check_bg</item>
        <item name="android:button">@null</item>
    </style>

    <style name="detail_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="detail_line">
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

</resources>
