<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout style="@style/width_match_parent"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:background="@drawable/dialog_error_border"
                android:paddingBottom="10dp"
                android:paddingTop="10dp">

    <TextView
        android:id="@+id/dialogTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="@string/change_supermatkey"
        android:textColor="@color/main_red_color"
        android:textSize="16sp"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/dialogContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/dialogTitle"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:drawableBottom="@drawable/dialog_error"
        android:drawablePadding="10dp"
        android:gravity="center"
        android:text="我崩溃了"
        android:textColor="#000000"
        android:textSize="18sp"/>

    <Button
        android:id="@+id/restart"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_below="@id/dialogContent"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:background="@color/lightgray"
        android:text="重新启动中……"
        android:textColor="@color/main_red_color"
        android:textSize="14sp"/>

</RelativeLayout><!-- From: file:/E:/Git/Lbsq/LbsqApp/src/main/res/layout/dialog_error.xml -->