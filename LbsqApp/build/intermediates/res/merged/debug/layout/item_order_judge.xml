<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/include_judge"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="#ffffff"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/judge_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:text="2015-07-21"
            android:textColor="@color/darkgray2"/>

        <RatingBar
            android:id="@+id/judge_ratingbar"
            style="@style/judgeRatingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:isIndicator="true"
            android:numStars="5"
            android:rating="4"
            android:stepSize="1"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/judge_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="快递真的很给力，不错，赞一个！快递真的很给力，不错，赞一个！快递真的很给力，不错，赞一个！"/>


</LinearLayout><!-- From: file:/E:/Git/Lbsq/LbsqApp/src/main/res/layout/item_order_judge.xml -->